{
  "name": "@pleme/observability",
  "version": "1.0.0",
  "description": "CNCF-aligned frontend observability with telemetry, metrics, and Web Vitals",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./react": {
      "types": "./src/react.ts",
      "import": "./src/react.ts"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "dev": "tsdown --watch",
    "prepare": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "check": "biome check --diagnostic-level=warn src",
    "check:types": "tsc --noEmit",
    "format": "biome check --write src",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "web-vitals": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "web-vitals": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.0",
    "@vitest/ui": "^3.2.0",
    "@biomejs/biome": "^1.9.4",
    "jsdom": "^27.0.0",
    "tsdown": "^0.2.0",
    "typescript": "^5.7.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.0",
    "web-vitals": "^4.0.0"
  },
  "keywords": [
    "observability",
    "telemetry",
    "metrics",
    "web-vitals",
    "cncf",
    "prometheus",
    "loki",
    "tempo",
    "frontend",
    "typescript",
    "library",
    "nexus",
    "pleme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pleme-io/pleme-web-observability.git"
  },
  "license": "MIT",
  "author": "Pleme.io Team"
}
